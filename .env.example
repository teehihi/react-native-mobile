# API Configuration Template
# Copy this file to .env and update with your actual values

# Cho development trên máy local
API_HOST_LOCAL=localhost

# Cho iOS Simulator
API_HOST_IOS_SIMULATOR=127.0.0.1

# Cho Android Emulator
API_HOST_ANDROID_EMULATOR=10.0.2.2

# Cho thiết bị thật (Real Device) - Thay bằng IP thực tế của máy tính
# Tìm IP: ifconfig | grep "inet " (macOS/Linux) hoặc ipconfig (Windows)
API_HOST_REAL_DEVICE=192.168.1.100

# API Port
API_PORT=3001

# Environment
NODE_ENV=development

# Debug
DEBUG_API=true